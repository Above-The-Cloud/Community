<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热门优惠"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <TextView
        android:id="@+id/meishi"
        android:layout_width="0dp"
        android:gravity="center"
        android:drawableTop="@drawable/icon_meishi"
        android:text="美食"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/maicai"
        android:layout_width="0dp"
        android:gravity="center"
        android:drawableTop="@drawable/icon_maicai"
        android:text="买菜"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/anmo"
        android:layout_width="0dp"
        android:gravity="center"
        android:drawableTop="@drawable/icon_anmo"
        android:text="按摩"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/liren"
        android:layout_width="0dp"
        android:gravity="center"
        android:drawableTop="@drawable/icon_liren"
        android:text="丽人"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/all"
        android:layout_width="0dp"
        android:gravity="center"
        android:drawableTop="@drawable/icon_all"
        android:text="全部"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>
