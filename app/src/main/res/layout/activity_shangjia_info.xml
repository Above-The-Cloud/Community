<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shangjia_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wang.yiwangchunyu.community.discovery.ShangjiaInfo"
    android:background="#ededed"
    android:orientation="vertical"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="9"
    android:fillViewport="true"
    android:scrollbars="none"
        >

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"

        />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginTop="2dp"
        android:progressTint="@color/warm_yellow"
        android:progressBackgroundTint="@color/gray"
        android:secondaryProgressTint="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="4.5"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5分"
        android:layout_alignBottom="@+id/ratingBar"
        android:layout_toRightOf="@+id/ratingBar"
        android:layout_toEndOf="@+id/ratingBar"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/average_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥70/人"
        android:layout_alignBottom="@+id/rating"
        android:layout_toRightOf="@+id/rating"
        android:layout_toEndOf="@+id/rating"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <ImageView
        android:id="@+id/picture"
        android:src="@mipmap/lafu"
        android:layout_width="200sp"
        android:layout_height="130sp"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@+id/content"
        android:id="@+id/bonus_layout"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bonus"
            android:id="@+id/bonus_img"
            android:layout_alignBottom="@+id/bonus_title"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="优惠信息"
            android:gravity="center"
            android:id="@+id/bonus_title"
            android:textColor="@color/bg_black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bonus_img"
            android:padding="3sp"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bonus"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bonus_layout"
        android:padding="6sp"
        android:text="满200立减50\n满500立减150"
        />

         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普陀区金沙江路1759号"
        android:id="@+id/address"
        android:padding="6sp"
        android:layout_below="@+id/address_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:orientation="horizontal"
        android:id="@+id/address_layout"
        android:layout_below="@+id/picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_img"
            android:src="@mipmap/location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/address_title"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/phone"
            android:id="@+id/call"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="10sp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:gravity="center"
            android:id="@+id/address_title"
            android:textColor="@color/bg_black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/call"
            android:layout_toRightOf="@+id/location_img"
            android:layout_toEndOf="@+id/location_img"

            android:padding="3sp"
            />

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="5sp"-->
            <!--android:background="@color/bg_white"-->
            <!--android:layout_below="@+id/picture"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true">-->
            <!---->
        <!--</LinearLayout>-->
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:padding="6sp"
        android:text="企业创始人陈松陶携手上海知名主持人丁晓峰打造的具有地道成都风味的火锅潮人地标\n包含露天位、景观位，wifi、沙发、包间齐全，另有贴心的宝宝椅；支持刷卡、现金、网上支付等多种支付方式"
        android:layout_below="@+id/profile_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="40sp"
             android:id="@+id/profile_layout"
             android:layout_below="@+id/address"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@mipmap/profile"
                 android:id="@+id/profile_img"
                 android:layout_alignParentTop="true"
                 android:layout_alignBottom="@+id/profile_title"
                 />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="商家信息"
                 android:gravity="center"
                 android:id="@+id/profile_title"
                 android:textColor="@color/bg_black"
                 android:textStyle="bold"
                 android:textSize="18sp"
                 android:padding="3sp"
                 android:layout_toRightOf="@+id/profile_img"
                 android:layout_alignParentTop="true" />
         </RelativeLayout>

     </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/appointment"
            android:layout_width="0dp"
            android:layout_height="36sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:text="预约到店"
            android:padding="3sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="36sp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:text="预约上门"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"
            android:padding="3sp"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>
